import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */Scanner obj=new Scanner(System.in);
        String str1=obj.nextLine();
       String strnew=new StringBuilder(str1).reverse(). toString();
              
        if(strnew.equals(str1)){
            System.out.println("Yes");
        }
        else
            System.out.println("No");
    }
}
