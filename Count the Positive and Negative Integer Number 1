import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */     Scanner obj=new Scanner(System.in);
        int n=obj.nextInt();
       int arr[]=new int [n];
        for(int i=0;i<n;i++){
            arr[i]=obj.nextInt();
        }
        float pos=0;
        float neg=0;
        for(int i=0;i<n;i++){
            if(arr[i]>=0){
                pos++;
            }
            else{
                neg++;
            }
        }
        System.out.printf("Count of Positive Integer is %.2f",pos);
        System.out.printf("\nCount of Negative Integer is %.2f",neg);
        
        
    }
}
